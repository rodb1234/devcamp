<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio.main_image unless @portfolio.main_image.nil? %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>
      <hr>
      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>
      <hr>
      <%= link_to "Back", portfolios_path %>

      <h2>Technologies Used: </h2>

      <% @portfolio.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>




