<%= form_with(model: @portfolio, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-group' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-group' %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-group' %>
    </div>
  </div>

  <div class="col-md-12">
    <p>Technologies</p>
    <div>
      <%= form.fields_for :technologies do |tech_form|%>
        <li>
          <div class="form-group">
            <%= tech_form.label :name %>
            <%= tech_form.text_field :name, class: 'form-group'%>
          </div>
        </li>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block'%>
    </div>
  </div>
<% end %>
